<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/vacation_list_fragment">

    <fragment
        android:id="@+id/vacation_list_fragment"
        android:name="io.terence.myapplication.vacations.display.VacationListFragment"
        android:label="VacationListFragment">
        <action
            android:id="@+id/show_vacation_detail"
            app:destination="@id/vacation_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/vacation_detail_fragment"
        android:name="io.terence.myapplication.vacations.display.VacationDetailFragment"
        android:label="vacation_detail"
        tools:layout="@layout/fragment_vacation_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>